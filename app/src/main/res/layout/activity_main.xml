<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jamesfrturner.urn.MainActivity"
    android:background="@color/colorPrimary">

    <include layout="@layout/on_air"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/logo_letter_width"
                android:layout_height="@dimen/play_button_size"
                android:src="@drawable/u"
                android:id="@+id/logo_letter_u"
                android:layout_toLeftOf="@+id/play_button"
                android:layout_toStartOf="@+id/play_button"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/logo_letter_n_description" />

            <ImageView
                android:layout_width="@dimen/logo_letter_width"
                android:layout_height="@dimen/play_button_size"
                android:src="@drawable/n"
                android:id="@+id/logo_letter_n"
                android:layout_toRightOf="@+id/play_button"
                android:layout_toEndOf="@+id/play_button"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/logo_letter_n_description" />

            <ImageView
                android:layout_width="@dimen/logo_wings_size"
                android:layout_height="@dimen/logo_wings_size"
                android:src="@drawable/wings"
                android:layout_centerInParent="true"
                android:contentDescription="@string/logo_wings_description"/>

            <ImageView
                android:layout_width="@dimen/logo_wings_size"
                android:layout_height="@dimen/logo_wings_size"
                android:src="@drawable/wings"
                android:scaleX="-1"
                android:scaleY="-1"
                android:layout_centerInParent="true"
                android:contentDescription="@string/logo_wings_description"/>

            <Button
                android:layout_width="@dimen/play_button_size"
                android:layout_height="@dimen/play_button_size"
                android:background="@drawable/circle_play_button"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/play_button" />

            <ProgressBar
                android:indeterminate="true"
                android:layout_width="@dimen/play_button_loading_spinner_size"
                android:layout_height="@dimen/play_button_loading_spinner_size"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:elevation="10dp"
                android:id="@+id/play_button_load_spinner"
                style="?android:attr/progressBarStyle"
                android:layout_gravity="center_vertical|center_horizontal"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slogan"
            android:textColor="@android:color/white"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="35dp"/>

        <include layout="@layout/now_playing" />
    </LinearLayout>

</RelativeLayout>
